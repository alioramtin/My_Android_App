<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ehsan.ehsancontrolco.SettingActivity">

    <LinearLayout
        android:id="@+id/MainLayout"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:id="@+id/TitleLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="صفحه تنظیمات"
                android:textAlignment="center"
                android:textColor="#262e0d"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/SizaMinLayout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.19"
                android:text="واحد  mg/dl  " />

            <Spinner
                android:id="@+id/spinnerMin"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.13"
                android:entries="@array/minmeasure" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:text="کمترین"
                android:textAlignment="center"
                android:textColor="#262e0d" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/SizaMaxLayout"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.08"
                android:text="واحد  mg/dl  " />

            <Spinner
                android:id="@+id/spinnerMax"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.45"
                android:entries="@array/maxmeasure" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:text="بیشترین"
                android:textAlignment="center"
                android:textColor="#262e0d" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/SaveLayout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="#ddbb89"
                android:onClick="saveBtnClickListener"
                android:text="ذخیره  کردن"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ExitLayout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="0.11"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnExit"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:background="#fea520"
                android:onClick="exitBtnClickListener"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text=" خروج"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>



</android.support.constraint.ConstraintLayout>
